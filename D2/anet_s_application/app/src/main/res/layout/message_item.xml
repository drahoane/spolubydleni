<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10pxh">
    <LinearLayout
        android:id="@+id/linearRowtrashOne"
        style="@style/groupStylegray_100cornerRadius"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_70pxh"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_marginEnd="@dimen/_10pxh"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_23pxv">
            <TextView
                android:id="@+id/txtMessageTime"
                style="@style/txtRobotoregular12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_15pxh"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="02:40"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearRowavatars3davOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_9pxv"
            android:layout_marginBottom="@dimen/_11pxv"
            android:layout_weight="0.89"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageAvatars3davOne"
                android:layout_width="@dimen/_40pxh"
                android:layout_height="@dimen/_40pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_avatars3dav_2"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_avatars3dav_2" />

            <TextView
                android:id="@+id/txtMessageBody"
                style="@style/txtRobotoregular14_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_15pxv"
                android:layout_weight="0.66"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_3pxh"
                android:singleLine="true"
                android:text="@{detailVM.detailModel.txtIndeedJana}"
                tools:text="@string/lbl_indeed_jana" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>