<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="detailVM" type="com.anetsapplication.app.modules.detail.data.viewmodel.DetailVM"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearDetail"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">

        <LinearLayout
            android:id="@+id/linearDeviceDevicef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:id="@+id/linearTopappbar"
                    style="@style/groupStyledeep_purple_800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:id="@+id/imageArrowleft"
                        style="@style/groupStylecornerRadius_3"
                        android:layout_width="@dimen/_40pxh"
                        android:layout_height="@dimen/_40pxv"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_17pxv"
                        android:layout_marginBottom="@dimen/_12pxv">

                        <ImageView
                            android:id="@+id/frameStackArrowLeft"
                            android:layout_width="@dimen/_7pxh"
                            android:layout_height="@dimen/_12pxh"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_16pxh"
                            android:layout_marginTop="@dimen/_14pxv"
                            android:layout_marginEnd="@dimen/_16pxh"
                            android:layout_marginBottom="@dimen/_14pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_arrowleft"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_arrowleft" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/txtHeadline"
                        style="@style/txtRobotoregular22"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_70pxh"
                        android:layout_marginTop="@dimen/_19pxv"
                        android:layout_marginBottom="@dimen/_18pxv"
                        android:layout_weight="0.72"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:singleLine="true"/>

                    <LinearLayout
                        android:id="@+id/linearContainer"
                        style="@style/groupStylecornerRadius_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_79pxh"
                        android:layout_marginTop="@dimen/_22pxv"
                        android:layout_marginEnd="@dimen/_18pxh"
                        android:layout_marginBottom="@dimen/_22pxv"
                        android:layout_weight="0.09"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageUser"
                            circular="@{true}"
                            imageRes="@{@drawable/img_user}"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20pxh"
                            android:gravity="start"
                            android:scaleType="centerCrop"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/img_user" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearRowrectangleone"
                style="@style/groupStylegray_100cornerRadius"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageRectangleOne"
                    cornerRadius="@{@dimen/_10pxh}"
                    imageRes="@{@drawable/img_rectangle1}"
                    android:layout_width="@dimen/_72pxh"
                    android:layout_height="@dimen/_72pxh"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_marginBottom="@dimen/_75pxv"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_rectangle1" />

                <LinearLayout
                    android:id="@+id/linearColumnedit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_marginBottom="@dimen/_23pxv"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageEdit"
                        android:layout_width="@dimen/_18pxh"
                        android:layout_height="@dimen/_17pxh"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_17pxh"
                        android:layout_marginEnd="@dimen/_17pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_edit"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_edit" />

                    <TextView
                        android:id="@+id/txtCupcakes"
                        style="@style/txtRobotomedium14_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_13pxh"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_marginEnd="@dimen/_13pxh"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/txtKCounter"
                        style="@style/txtRobotoregular16_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_13pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_marginEnd="@dimen/_13pxh"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageTrash"
                    android:layout_width="@dimen/_16pxh"
                    android:layout_height="@dimen/_18pxh"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_marginEnd="@dimen/_23pxh"
                    android:layout_marginBottom="@dimen/_134pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_trash"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_trash" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/rectangle_bg_gray_100_radius_12"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="@dimen/_50pxh"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_15pxv"
                android:paddingEnd="@dimen/_19pxh"
                android:paddingBottom="@dimen/_5pxv"
                style="@style/etSolidRounded_1">
                <TextView android:ellipsize="end"
                    android:id="@+id/etGroupThree"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="@dimen/_3pxh"
                    android:singleLine="true"
                    style="@style/txtRobotoregular16_1" android:text="Mark as already paid"/>
                <CheckBox
                    android:id="@+id/btnCheckmark"
                    android:layout_height="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_150pxv"
                    android:layout_width="@dimen/_25pxh"
                    android:paddingHorizontal="@dimen/_3pxh"
                    android:paddingVertical="@dimen/_3pxv"
                    android:scaleType="fitCenter"
                    android:buttonTint="#4f378b"
                    android:src="@drawable/img_checkmark" tools:ignore="ContentDescription"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/noMessagesFound"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/_20pxv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No messages found."
                    android:textSize="16sp">
                </TextView>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerMessages"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_25pxh"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/linearStatelayer"
                style="@style/groupStyledeep_purple_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearRowcomputer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_18pxv"
                    android:layout_marginBottom="@dimen/_17pxv"
                    android:layout_weight="0.1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/textMessage"
                        style="@style/txtRobotoregular16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_18pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.9"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:hint="Enter comment..."/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/commentBtn"
                    style="@style/groupStylecornerRadius_8"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="@dimen/_40pxv"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:layout_marginBottom="@dimen/_21pxv">

                    <ImageView
                        android:id="@+id/frameContainer"
                        android:layout_width="@dimen/_11pxh"
                        android:layout_height="@dimen/_15pxh"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_icon_gray_800"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_icon_gray_800" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frameStackhome"
                android:paddingVertical="@dimen/_12pxh"
                android:paddingHorizontal="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_15pxh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" style="@style/groupStyledeep_purple_800">

                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearSegment1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:id="@+id/linearIconcontainer"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical" style="@style/groupStylewhite_1">
                        <View
                            android:background="@drawable/rectangle_bg_deep_purple_800_radius_6"
                            android:id="@+id/viewIcon"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="@dimen/_12pxh"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_26pxh"
                            android:layout_marginStart="@dimen/_26pxh"
                            android:layout_marginTop="@dimen/_10pxv" android:layout_width="@dimen/_12pxh"/>
                    </LinearLayout>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtLabeltext"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_14pxh"
                        android:layout_marginStart="@dimen/_39pxh"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_width="wrap_content"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="@string/lbl_create"
                        style="@style/txtRobotomedium12"/>
                </LinearLayout>

                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearSegment2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:id="@+id/linearIconcontainer1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_24pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="wrap_content"
                        android:orientation="vertical" style="@style/groupStylecornerRadius_6">
                        <ImageView android:id="@+id/imageIconOne"
                            android:layout_gravity="start"
                            android:layout_height="@dimen/_12pxh"
                            android:layout_width="@dimen/_14pxh"
                            android:scaleType="centerCrop"
                            circular="@{true}"
                            imageRes="@{@drawable/img_icon}"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_icon"/>
                    </LinearLayout>
                    <TextView android:ellipsize="end"
                        android:gravity="start"
                        android:id="@+id/txtLabeltextOne"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_14pxh"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_width="wrap_content"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="@string/lbl_households"
                        style="@style/txtRobotomedium12"/>
                </LinearLayout>

                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearSegment3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/frameIconcontainer"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_40pxh"
                        android:layout_marginStart="@dimen/_2pxh"

                        android:layout_width="wrap_content"
                        style="@style/groupStylecornerRadius_4">
                        <ImageView android:id="@+id/imageIconTwo"
                            android:layout_gravity="bottom|start"
                            android:layout_height="@dimen/_12pxh"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginBottom="@dimen/_16pxv"
                            android:layout_width="@dimen/_14pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_icon"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_icon"/>

                    </FrameLayout>
                    <TextView android:ellipsize="end"
                        android:gravity="start"
                        android:id="@+id/txtLabeltextTwo"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_14pxh"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_width="wrap_content"
                        android:lineSpacingExtra="@dimen/_3pxh"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:text="@string/lbl_notifications"
                        style="@style/txtRobotomedium12" tools:text="@string/lbl_notifications"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
